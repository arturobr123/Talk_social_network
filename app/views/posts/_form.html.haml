= form_for @post, remote: true do |f|
  -if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .mdl-textfield.mdl-js-textfield.full-width
    = f.text_area :body,class:"mdl-textfield__input anchoLetra",row:"3"
    = f.label :body, "Talk...",class:"mdl-textfield__label"
    =f.file_field :photo,class:"ocultar updatePhoto",id:"uploadPhotoVideo"
  

  .actions.text-right
    %i.material-icons.md-30.upload-something.botonUpload{for:"#uploadPhotoVideo"} insert_photo
    %i.material-icons.md-30.upload-something.botonUpload{for:"#uploadPhotoVideo"} videocam
    %img#imgSalida.fotoForm{width:"60px", height:"50px", src:"" }

    = f.submit 'Share', class:"mdl-button mdl-js-button mdl-button--raised mdl-button--accent"
    


          
              
